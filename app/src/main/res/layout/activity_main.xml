<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:text="@string/app_name"
        android:textColor="@color/own_light_grey"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fibonacci_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/fibonacci"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fibonacci_number"
        android:backgroundTint="@color/own_dark_green"
        tools:layout_editor_absoluteX="148dp" />

    <EditText
        android:id="@+id/fibonacci_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/number_hint"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        app:layout_constraintTop_toBottomOf="@+id/screen_title"
        tools:layout_editor_absoluteX="91dp" />

    <Spinner
        android:id="@+id/factorial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/fibonacci_button"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/factorial_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/factorial"
        app:layout_constraintTop_toBottomOf="@+id/factorial_number"
        android:textStyle="bold"
        android:backgroundTint="@color/own_dark_green"
        tools:layout_editor_absoluteX="110dp" />

    <Button
        android:id="@+id/countries_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/countries"
        app:layout_constraintTop_toBottomOf="@+id/factorial_button"
        android:textStyle="bold"
        android:backgroundTint="@color/own_dark_green"
        tools:layout_editor_absoluteX="84dp" />

    <TextView
        android:id="@+id/info_activities_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="70dp"
        android:textAlignment="center"

        android:text="@string/info_activity_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countries_button" />
</androidx.constraintlayout.widget.ConstraintLayout>